# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Jinja2 templates
[*.jinja2]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Bicep
[*.bicep]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Windows batch files
[*.{cmd,bat}]
end_of_line = crlf

# PowerShell
[*.ps1]
indent_style = space
indent_size = 4
