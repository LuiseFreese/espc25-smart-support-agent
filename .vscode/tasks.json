{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy Infrastructure",
      "type": "shell",
      "command": "az deployment sub create --location eastus --template-file infra/main.bicep --parameters @infra/parameters.dev.json",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Run Demo 01 - Triage",
      "type": "shell",
      "command": "pf flow test -f demos/01-triage-promptflow/flow.dag.yaml --inputs ticket_text='VPN disconnects every 5 minutes'",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Demo 02 - Ingest KB",
      "type": "shell",
      "command": "cd demos/02-rag-search/ingest && npm install && npm run dev",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Run Demo 02 - RAG Flow",
      "type": "shell",
      "command": "pf flow test -f demos/02-rag-search/flow.dag.yaml --inputs question='How to reset my password?'",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Start Demo 03 - Functions",
      "type": "shell",
      "command": "cd demos/03-agent-with-tools/function-tool && npm install && npm start",
      "problemMatcher": [],
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "Run Demo 03 - Agent",
      "type": "shell",
      "command": "cd demos/03-agent-with-tools/agent && npm install && npm run dev -- 'Where is order 12345?'",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Start Unified UI - Frontend",
      "type": "shell",
      "command": "npm run dev",
      "problemMatcher": [],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/demos-ui/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "unified-demo"
      }
    },
    {
      "label": "Start Unified UI - Backend",
      "type": "shell",
      "command": "npm run dev",
      "problemMatcher": [],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/demos-ui/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "unified-demo"
      }
    },
    {
      "label": "Start Unified Demo UI",
      "dependsOn": [
        "Start Unified UI - Frontend",
        "Start Unified UI - Backend"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Complete Demo System",
      "dependsOn": [
        "Start Unified UI - Frontend",
        "Start Unified UI - Backend",
        "Start Demo 03 - Function Tools"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
