{
  "name": "agent-function-tools",
  "version": "1.0.0",
  "description": "Azure Functions exposing tools for agent function calling",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "clean:win": "if exist dist rmdir /s /q dist"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "applicationinsights": "^2.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}