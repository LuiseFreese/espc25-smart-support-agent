# Azure Resources Configuration
# Copy this file to .env and run './scripts/setup-env.ps1' to auto-fill values
# Or manually fill in values from Azure Portal

# Azure AI Search
AZURE_AI_SEARCH_ENDPOINT=https://srch-agents-XXXXX.search.windows.net
AZURE_AI_SEARCH_API_KEY=your-search-admin-key-here

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://oai-agents-XXXXX.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Authentication Mode (optional)
# Set to 'true' to force Managed Identity even if API key is present
# Useful for production deployments
# USE_MANAGED_IDENTITY=false

# Function Apps (URLs and keys)
RAG_FUNCTION_URL=https://func-rag-XXXXX.azurewebsites.net
RAG_FUNCTION_KEY=your-rag-function-key-here
AGENTS_FUNCTION_URL=https://func-agents-XXXXX.azurewebsites.net
AGENTS_FUNCTION_KEY=your-agents-function-key-here

# Microsoft Graph (for Demo 04 - configure with './scripts/setup-graph-webhook.ps1')
GRAPH_CLIENT_ID=your-app-registration-id
GRAPH_CLIENT_SECRET=your-client-secret
GRAPH_TENANT_ID=your-tenant-id
SUPPORT_EMAIL_ADDRESS=support@yourdomain.com

# Azure Resources
RESOURCE_GROUP=rg-smart-agents-dev
TENANT_ID=your-tenant-id
SUBSCRIPTION_ID=your-subscription-id
STORAGE_ACCOUNT_KEY=YOUR_STORAGE_KEY

# Optional: Azure Resource Configuration
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=rg-smart-agents-dev
AZURE_LOCATION=swedencentral
ENVIRONMENT_NAME=dev
